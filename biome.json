{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"ignore": [
			"**/.git/**",
			"**/.DS_Store",
			"node_modules/**",
			"dist/**",
			".next/**",
			".turbo/**",
			".vercel/**",
			".output/**",
			".cache/**",
			".yarn/**",
			"!.yarn/patches/**",
			"!.yarn/plugins/**",
			"!.yarn/releases/**",
			"!.yarn/sdks/**",
			"!.yarn/versions/**",
			"yarn.lock",
			"bun.lockb",
			"package-lock.json"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"nursery": {
				"useSortedClasses": "error"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"ignore": [],
		"attributePosition": "auto",
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 80,
		"lineEnding": "lf"
	},
	"javascript": {
		"formatter": {
			"arrowParentheses": "always",
			"bracketSameLine": false,
			"bracketSpacing": true,
			"jsxQuoteStyle": "double",
			"quoteProperties": "asNeeded",
			"semicolons": "always",
			"trailingCommas": "all"
		}
	},
	"json": {
		"formatter": {
			"trailingCommas": "none"
		}
	}
}
